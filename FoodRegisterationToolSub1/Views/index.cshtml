@{
    ViewData["Title"] = "MainPage";
}

<!-- Page Container -->
<div class="container d-flex flex-column justify-content-center align-items-center vh-100">
    <!-- Round SVG Image -->
    <div class="mb-3 text-center" style="max-width: 500px;">
        <img src="@Url.Content("~/images/search_image.png")" class="rounded-circle mb-4" alt="Logo" style="width: 150px; height: 150px; object-fit: cover;" />
    </div>
    <div class="background-image">
    <!-- Your content here -->
    <h1>Hello</h1>
</div>

    <h1 class="mb-4">WebOsl5</h1>
    <h2 class="mb-3">Search Foods and Meals</h2>

    <!-- Search Input Group -->
    <div class="input-group mb-3" style="max-width: 500px;">
        <input type="text" id="query" class="form-control" placeholder="Enter food or meal name" aria-label="Search query" />
        <button id="searchButton" class="btn btn-primary" type="button">Search</button>
    </div>

    <!-- Results Section -->
    <div id="results" class="mt-4" style="width: 100%; max-width: 600px;">
        <!-- Dynamic search results will be injected here by search.js -->
    </div>
</div>

@section Scripts {
    <!-- Load Bootstrap JS and other dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+9E7LF7oUj2+5g+rLA7CzR7vga9gA" crossorigin="anonymous"></script>
    <!-- Load custom search script -->
    <script src="~/js/search.js"></script>
    
}
