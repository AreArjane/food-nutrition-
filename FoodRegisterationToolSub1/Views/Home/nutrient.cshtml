/// <summary>
/// Razor view for displaying a dynamic table of nutrient information.
/// </summary>
/// <remarks>
/// This view provides a visually appealing interface to display a list of nutrients, including details such as ID, Name, Unit Name, and Rank.
/// It uses dynamic functionality to fetch and display additional rows as needed, with a "Load More" button.
/// </remarks>
///
/// <dependencies>
/// - Layout: Integrates with the shared layout located at "~/Views/Shared/_Layout.cshtml".
/// - CSS Framework: Styled with Bootstrap 5.3, loaded from a CDN.
/// - JavaScript: Uses the script "~/js/tabels/fetchNutrientData.js" for fetching and dynamically rendering table rows.
/// </dependencies>
///
/// <example>
/// Example use case:
/// - Display nutrient information retrieved from an API or database.
/// - Allow users to load additional nutrients dynamically by clicking the "Load More" button.
/// </example>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "NutrientsPage";
}
   

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .table-container {
            margin: 20px auto;
            max-width: 1200px;
        }
        .loading {
            text-align: center;
            margin-top: 20px;
            font-size: 1.5rem;
            color: #6c757d;
        }
    </style>

    <div class="table-container">
        <h1 class="text-center mb-4">Nutrients Information</h1>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Nutrient ID</th>
                    <th>Name</th>
                    <th>Unit Name</th>
                    <th>Nutrient NBR</th>
                    <th>Rank</th>
                   
                </tr>
            </thead>
            <tbody id="nutrientTableBody">
                <!-- Rows will be populated here dynamically -->
            </tbody>
        </table>
        <div id="loadingMessage" class="loading">Loading data...</div>
        <button id="loadMoreButton" class="btn btn-primary mx-auto d-block">Load More</button>
    </div>
    
@section Scripts {
    <script src="~/js/tabels/fetchNutrientData.js"></script>
}
