@{
    ViewData["Title"] = "MainPage";
}

<div class="full-height">
    <!-- Rounded Image -->
    <img src="@Url.Content("~/images/search_image.png")" class="rounded-image" alt="Logo" />

    <h1>WebOsl5</h1>
    <h2>Search Foods and Meals</h2>

    <!-- Search Input and Button -->
    <div class="search-container">
        <input type="text" id="query" class="search-input" placeholder="Enter food or meal name" aria-label="Search query" />
        <button id="searchButton" class="search-button" type="button">Search</button>
    </div>

    <!-- Results Section -->
    <div id="results" class="results-container">
        <!-- Dynamic search results will be injected here by search.js -->
    </div>
</div>

@section Scripts {
    <script src="~/js/search.js"></script>
}
